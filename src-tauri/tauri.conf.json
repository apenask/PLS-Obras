{
  "productName": "PLS Obras",
  "version": "1.0.0",
  "identifier": "com.pls.obras",

  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "title": "PLS Obras",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 600,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": { "csp": null }
  },

  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico"
    ],
    "category": "Business",
    "copyright": "PLS Team",
    "shortDescription": "PLS Obras - Talão Digital",
    "longDescription": "Sistema de gerenciamento de obras com talões digitais e compras externas"
  }
}
